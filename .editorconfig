; This file is for unifying the coding style for different editors and IDEs.
; More information at http://EditorConfig.org

root = true

[*]
end_of_line = LF
trim_trailing_whitespace = true
insert_final_newline = true

[scripts/**.js]
indent_style = tab
indent_size = 2
tab_width = 2

[stylesheets/i.css]
indent_style = space
indent_size = 4

[stylesheets/style.css]
indent_style = tab

[lang/**.json]
indent_style = space
indent_size = 2
